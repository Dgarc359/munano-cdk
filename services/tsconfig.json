{
  "extends": "../tsconfig.json",
  "include": ["functions", "extern", "lib"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
